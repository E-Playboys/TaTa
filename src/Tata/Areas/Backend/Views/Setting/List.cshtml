@using Tata.Entities.Enums
@using Tata.Areas.Backend.Models.Setting
@model IEnumerable<SettingModel>
@{
    ViewData["Title"] = "Settings";
}

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Page Settings</h2>
    <ol class="breadcrumb">
      <li>
        <a href="@Url.Action("Index", "Product")">Home</a>
      </li>
      <li>
        <a>Setting</a>
      </li>
      <li class="active">
        <strong>List</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">

  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
        <div class="ibox-heading">
          <a class="btn btn-primary col-lg-12 m-b-sm" href="@Url.Action("Details", "Setting", new {id = 0})">Add new setting</a>
        </div>
        <div class="ibox-content">

          <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="10" data-paging="true" data-filtering="true" data-sorting="true">
            <thead>
              <tr>
                <th data-toggle="true">Setting Name</th>
                <th data-hide="phone">Section</th>
                <th data-hide="phone">Priority</th>
                <th data-hide="all">Type</th>
                <th data-hide="phone">Value</th>
                <th class="text-right" data-sort-ignore="true">Action</th>
              </tr>
            </thead>
            <tbody>
              @foreach (var setting in Model)
              {
                  <tr>
                    <td>
                      @(setting.Name)
                    </td>
                    <td>
                      @(setting.Section)
                    </td>
                    <td>
                      @(setting.Priority)
                    </td>
                    <td>
                      @(setting.TypeValue)
                    </td>
                    <td width="30%">
                      @{
                          switch (setting.TypeValue)
                          {
                            case SettingValueType.TEXT:
                            case SettingValueType.URL:
                            case SettingValueType.NUMBER:
                            case SettingValueType.IDS:
                              @setting.Value;
                              break;
                            default:
                              @Html.Raw("Xem chi tiết trong phần chỉnh sửa.")
                              break;
                          }
                      }
                    </td>
                    <td class="text-right">
                      <div class="btn-group">
                        <a class="btn-white btn btn-xs" href="@Url.Action("Details", "Setting", new {id = @setting.Id})">View</a>
                        <a class="btn-white btn btn-xs" href="@Url.Action("Details", "Setting", new {id = @setting.Id})">Edit</a>
                      </div>
                    </td>
                  </tr>
              }
            </tbody>
            <tfoot>
              <tr>
                <td colspan="6">
                  <ul class="pagination pull-right">
                  </ul>
                </td>
              </tr>
            </tfoot>
          </table>

        </div>
      </div>
    </div>
  </div>


</div>

@section Styles {

  @*<environment names="Development">
      <link rel="stylesheet" href="~/lib/footable/css/footable.core.css" />
    </environment>
    <environment names="Staging,Production">
      <link rel="stylesheet" href="~/lib/footable/css/footable.core.min.css" />
    </environment>*@
}

@section Scripts {
  <script type="text/javascript">
    $(document).ready(function () {
      $('.footable').footable();
    });
  </script>
}
