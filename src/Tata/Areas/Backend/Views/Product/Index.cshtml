    </environment>*@
}

@section Scripts {
  <script src="~/backend/lib/footable/dist/footable.all.min.js"></script>
  @*<environment names="Development,Staging,Production">
      <script src="~/lib/footable/dist/footable.all.min.js"></script>
    </environment>*@

  <script type="text/javascript">
