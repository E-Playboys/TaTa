@using Tata.Entities.Enums
@using Tata.Areas.Backend.Models.Article
@model ArticleModel

@{
    ViewData["Title"] = "Article Config";
}

@using (Html.BeginForm(true))
{
    <input asp-for="Id" type="hidden" />
    <input asp-for="CreatedDate" type="hidden" />
    <div class="row wrapper border-bottom white-bg page-heading">
      <div class="col-lg-10">
        <h2>Article edit</h2>
        <ol class="breadcrumb">
          <li>
            <a href="@Url.Action("Index", "Product")">Home</a>
          </li>
          <li>
            <a href="@Url.Action("Index", "Article")">Article</a>
          </li>
          <li class="active">
            <strong>Edit</strong>
          </li>
        </ol>
      </div>
    </div>

    <div class="wrapper wrapper-content animated fadeInRight ecommerce">

      <div class="row">
        <div class="col-lg-12">
          <div class="tabs-container">
            <ul class="nav nav-tabs">
              <li class="active"><a data-toggle="tab" href="#tab-1"> Info</a></li>
            </ul>
            <div class="tab-content">
              <div id="tab-1" class="tab-pane active">
                <div class="panel-body">

                  <fieldset class="form-horizontal">
                    <div class="form-group">
                      <label class="col-sm-2 control-label">Title:</label>
                      <div class="col-sm-10">
                        <input asp-for="Title" class="form-control" placeholder="Product name"/>
                        <span asp-validation-for="Title" class="text-danger"></span>
                      </div>
                    </div>
                      <div class="form-group">
                          <label class="col-sm-2 control-label">Feature image:</label>
                          <div class="col-sm-10">
                              <input asp-for="FeatureImg" class="form-control" placeholder="Section" />
                              <span asp-validation-for="FeatureImg" class="text-danger"></span>
                          </div>
                      </div>
                    <div class="form-group">
                      <label class="col-sm-2 control-label">Excert:</label>
                      <div class="col-sm-10">
                        <input asp-for="Excert" class="form-control" placeholder="Section" />
                        <span asp-validation-for="Excert" class="text-danger"></span>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-sm-2 control-label">Article Value:</label>
                      <div class="col-sm-10">
                          @Html.DropDownListFor(m => m.ArtType, Html.GetEnumSelectList<ArticleType>(), null, new { Class = "form-control" })
                      </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Priority:</label>
                        <div class="col-sm-10">
                            <input asp-for="Priority" class="form-control" placeholder="..." />
                            <span asp-validation-for="Priority" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                      <label class="col-sm-2 control-label">Content:</label>
                      <div class="col-sm-10">
                        <textarea asp-for="Content" class="summernote"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                      </div>
                    </div>
                  </fieldset>

                </div>
              </div>
              <div>
                <input type="submit" value="Submit" class="btn btn-primary pull-right" />
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
}

@section Styles {
  <link rel="stylesheet" href="~/backend/lib/summernote/summernote.css" />
  <link rel="stylesheet" href="~/backend/lib/summernote/summernote-bs3.css" />
  <link rel="stylesheet" href="~/backend/lib/chosen/bootstrap-chosen.css" />
  <link rel="stylesheet" href="~/backend/lib_bower/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.css" />
  <link rel="stylesheet" href="~/lib/seiyria-bootstrap-slider/dist/css/bootstrap-slider.min.css" />
  @*<environment names="Development,Staging,Production">
        <link rel="stylesheet" href="~/backend/lib/summernote/summernote.css" />
        <link rel="stylesheet" href="~/backend/lib/summernote/summernote-bs3.css" />
    </environment>*@

}

@section Scripts {

  <script src="~/backend/lib/summernote/summernote.min.js"></script>
  <script src="~/backend/lib/chosen/chosen.jquery.js"></script>
  <script src="~/backend/lib_bower/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.js"></script>
  <script src="~/lib/seiyria-bootstrap-slider/dist/bootstrap-slider.min.js"></script>
  @*<environment names="Development,Staging,Production">
        <script src="~/backend/lib/summernote/summernote.min.js"></script>
    </environment>*@
    <script type="text/javascript">
        $(document).ready(function () {
          $('.summernote').summernote();
        });
    </script>

}