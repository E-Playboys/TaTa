@using Tata.Entities
@using TaTa.DataAccess.Entities
@using Tata.Areas.Backend.Models.Users
@model IEnumerable<UserModel>
@{
    ViewData["Title"] = "Users";
}

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Page Users</h2>
    <ol class="breadcrumb">
      <li>
        <a href="@Url.Action("Index", "Home")">Home</a>
      </li>
      <li>
        @Html.ActionLink("Users", "Index", "Users", null)
      </li>
      <li class="active">
        <strong>List</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">

  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight ecommerce">

  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
        <div class="ibox-heading">
          <a class="btn btn-primary col-lg-12 m-b-sm" href="@Url.Action("Details", "Users", new {id = 0})">Add new User</a>
        </div>
        <div class="ibox-content">

          <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="10" data-paging="true" data-filtering="true" data-sorting="true">
            <thead>
              <tr>
                <th data-toggle="true">User Name</th>
                <th data-hide="phone">Email</th>
                <th data-hide="phone">Username</th>
                <th data-hide="all">User Type</th>
                <th data-hide="phone">Role</th>
                <th class="text-right" data-sort-ignore="true">Action</th>
              </tr>
            </thead>
            <tbody>
              @foreach (var User in Model)
              {
                  <tr>
                    <td>
                      @User.FullName
                    </td>
                    <td>
                      @User.Email
                    </td>
                    <td>
                      @User.UserName
                    </td>
                    <td>
                      @User.UserType
                    </td>
                    <td width="30%">
                      @string.Join(",", User.Roles)
                    </td>
                    <td class="text-right">
                      <div class="btn-group">
                        <a class="btn-white btn btn-xs" href="@Url.Action("Details", "Users", new {id = @User.Id})">View</a>
                        <a class="btn-white btn btn-xs" href="@Url.Action("Details", "Users", new {id = @User.Id})">Edit</a>
                      </div>
                    </td>
                  </tr>
              }
            </tbody>
            <tfoot>
              <tr>
                <td colspan="6">
                  <ul class="pagination pull-right">

                  </ul>
                </td>
              </tr>
            </tfoot>
          </table>

        </div>
      </div>
    </div>
  </div>


</div>

