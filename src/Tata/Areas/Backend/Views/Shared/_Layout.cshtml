@using System.Threading.Tasks
@using Tata.Areas.Backend.Helpers
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - TaTa VPS CMS</title>
  <meta http-equiv="X-UA-Compatible" content="IE=edge">

  <!-- Add local styles, mostly for plugins css file -->
  @if (IsSectionDefined("Styles"))
            {@RenderSection("Styles", required: false)}

  <environment names="Development">
    <link rel="stylesheet" href="~/backend/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/backend/lib_bower/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/backend/lib_bower/metisMenu/dist/metisMenu.css" />
    <link rel="stylesheet" href="~/backend/css/animate.css" />
    <link rel="stylesheet" href="~/backend/css/style.css" asp-append-version="true" />
  </environment>
  <environment names="Staging,Production">
    <link rel="stylesheet" href="~/backend/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/backend/lib_bower/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/backend/lib_bower/metisMenu/dist/metisMenu.min.css" />
    <link rel="stylesheet" href="~/backend/css/animate.css" />
    <link rel="stylesheet" href="~/backend/css/style.css" asp-append-version="true" />
  </environment>

</head>
<body>

  <!-- Wrapper-->
  <div id="wrapper" class="@Html.PageClass()">

    <!-- Navigation -->
    @Html.Partial("_Navigation")

    <!-- Page wraper -->
    <div id="page-wrapper" class="gray-bg @ViewBag.SpecialClass">

      <!-- Top Navbar -->
      @Html.Partial("_TopNavbar")

      <!-- Main view  -->
      @RenderBody()

      <!-- Footer -->
      @Html.Partial("_Footer")

    </div>
    <!-- End page wrapper-->
    <!-- Right Sidebar -->
    @Html.Partial("_RightSidebar")

  </div>
  <!-- End wrapper-->
  <script src="~/backend/lib/jquery/dist/jquery.js"></script>
  <script src="~/backend/lib/bootstrap/dist/js/bootstrap.js"></script>
  <script src="~/backend/lib_bower/metisMenu/dist/metisMenu.js"></script>
  <script src="~/backend/lib_bower/slimScroll/jquery.slimscroll.js"></script>
  <script src="~/backend/lib_bower/pace/pace.js"></script>
  <script src="~/backend/js/script.js"></script>
