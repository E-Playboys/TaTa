@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer StringRes
@model HomeViewModels
@{
    ViewData["Title"] = "Nhà cung cấp VPS";
}

@await Html.PartialAsync("_SliderPartial", Model)

<article class="content">
    <div class="full-width-box">
        <div class="fwb-bg bg-info"></div>

        <div class="container">
            <div class="row">
                @Html.Raw(Model.HomeBanner[0].Value)
            </div>
        </div>
    </div><!-- .full-width-box -->

    <div class="full-width-box">
        <div class="fwb-bg fwb-fixed band-1"><div class="overlay"></div></div>
        <div class="container">
            <div class="row text-center">
                @foreach (var product in Model.HomeProductFeature)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3">
                        <div class="pricing pricing-danger">
                            <div class="title">
                                @Html.ActionLink(product.Name, "Vps", "ConfigureProduct", new { productId = product.Id }, null)
                            </div>
                            <div class="price-box">
                                <div class="price">@product.Prices.SingleOrDefault(pr => pr.IsDefault).Price.ToString("N0")<span> @StringRes["ProductPlanUnit"]</span></div>
                            </div>
                            <ul class="options">
                                @foreach (var property in product.Properties)
                                {
                                    <li class="active"><span><i class="fa fa-check"></i></span>@property.Name</li>
                                }
                                @foreach (var price in product.Prices)
                                {
                                    if (price.IsDefault)
                                    {
                                        <li class="active"><span><i class="fa fa-check"></i></span>@price.Name - @price.Price.ToString("N0") vnđ/tháng</li>
                                    }
                                    else
                                    {
                                        <li><span><i class="fa fa-check"></i></span>@price.Name - @price.Price.ToString("N0") vnđ/tháng</li>
                                    }
                                }
                            </ul>
                            <div class="bottom-box">
                                <a href="@Url.Action("VirtualPrivateServer", "Service", new { Id = product.Id })" class="more">Chi tiết <span class="fa fa-angle-right"></span></a>
                                <div class="rating-box">
                                    <div style="width: 100%" class="rating">
                                        <svg x="0" y="0" width="73px" height="12px" viewBox="0 0 73 12" enable-fwb-bg="new 0 0 73 12" xml:space="preserve">
                                        <polygon fill-rule="evenodd" clip-rule="evenodd" fill="#1e1e1e" points="6.5,0 8,5 13,5 9,7.7 10,12 6.5,9.2 3,12 4,7.7 0,5 5,5"></polygon>
                                        <polygon fill-rule="evenodd" clip-rule="evenodd" fill="#1e1e1e" points="66.5,0 68,5 73,5 69,7.7 70,12 66.5,9.2 63,12 64,7.7 60,5 65,5 "></polygon>
                                        <polygon fill-rule="evenodd" clip-rule="evenodd" fill="#1e1e1e" points="21.5,0 23,5 28,5 24,7.7 25,12 21.5,9.2 18,12 19,7.7 15,5 20,5 "></polygon>
                                        <polygon fill-rule="evenodd" clip-rule="evenodd" fill="#1e1e1e" points="51.5,0 53,5 58,5 54,7.7 55,12 51.5,9.2 48,12 49,7.7 45,5 50,5 "></polygon>
                                        <polygon fill-rule="evenodd" clip-rule="evenodd" fill="#1e1e1e" points="36.5,0 38,5 43,5 39,7.7 40,12 36.5,9.2 33,12 34,7.7 30,5 35,5 "></polygon>
                                        </svg>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <a class="btn btn-default btn-lg" href="@Url.Action("Vps", "ConfigureProduct", new { productId = product.Id })">Đặt mua</a>
                            </div><!-- .pricing -->
                        </div>
                    </div>
                }
            </div>
        </div>
    </div><!-- .full-width-box -->

    <div class="full-width-box bottom-padding cm-padding-bottom-36">
        <div class="fwb-bg bg-danger"></div>

        <div class="container">
            <div class="row">
                @Html.Raw(Model.HomeBanner[1].Value)
            </div>
        </div>
    </div><!-- .full-width-box -->

    <div class="container">
        <div class="title-box">
            <h1 class="title">CÁC GÓI DỊCH VỤ VPS ĐÃ BAO GỒM</h1>
        </div>
        <div class="row">
            @Html.Raw(Model.HomeServiceProperties)
        </div>
        <div class="clearfix"></div>
    </div>

    <div class="container">
        <div class="row services">
            <div class="col-sm-12 col-md-12">
                <div class="title-box">
                    <h1 class="title">@Model.HomeServiceTitle</h1>
                </div>
            </div>
            @Html.Raw(Model.HomeServiceFeature[0].Value)
        </div>
        <div class="row services">
            @Html.Raw(Model.HomeServiceFeature[1].Value)
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="bottom-padding col-sm-6 col-md-6">
                <div class="carousel-box load overflow" data-carousel-pagination="true" data-carousel-nav="false" data-carousel-one="true" data-autoplay-disable="true">
                    <div class="title-box">
                        <a class="next" href="#">
                            <svg x="0" y="0" width="9px" height="16px" viewBox="0 0 9 16" enable-background="new 0 0 9 16" xml:space="preserve">
                            <polygon fill-rule="evenodd" clip-rule="evenodd" fill="#fcfcfc" points="1,0.001 0,1.001 7,8 0,14.999 1,15.999 9,8 "></polygon>
                </svg>
                        </a>
                        <a class="prev" href="#">
                            <svg x="0" y="0" width="9px" height="16px" viewBox="0 0 9 16" enable-background="new 0 0 9 16" xml:space="preserve">
                            <polygon fill-rule="evenodd" clip-rule="evenodd" fill="#fcfcfc" points="8,15.999 9,14.999 2,8 9,1.001 8,0.001 0,8 "></polygon>
                </svg>
                        </a>
                        <h2 class="title">Thông tin</h2>
                    </div>

                    <div class="clearfix"></div>

                    <div class="row">
                        <div class="carousel no-responsive">
                            @foreach (var serviceArt in Model.HomeServiceArticle)
                            {
                                <div class="post">
                                    <h2 class="entry-title"><a href="@Url.Action("Article", "Home", new { id = serviceArt.Id })">@serviceArt.Title</a></h2>
                                    <div class="entry-content">
                                        @Html.Raw(serviceArt.Content)
                                    </div>
                                    <div class="entry-meta">
                                        <span class="autor-name">@serviceArt.CreatedUser.FullName</span>,
                                        <span class="time">@serviceArt.CreatedDate.ToString("MM.dd.yyyy")</span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="clearfix"></div>

                    <div class="pagination switches"></div>
                </div>
            </div>

            <div class="bottom-padding col-sm-6 col-md-6">
                <div class="title-box">
                    <h2 class="title">Dịch vụ</h2>
                </div>

                <div class="panel-group multi-collapse" id="accordion2">
                    @foreach (var service in Model.HomeServiceIntro)
                    {
                        @Html.Raw(service.Value)
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-6 promo-partners bottom-padding">
                <div class="title-box">
                    <h2 class="title">ĐỐI TÁC</h2>
                </div>
                <div class="row manufactures manufactures-list">
                    <div class="make-wrapper">
                        <a href="https://www.icann.org" class="make">
                            <img class="replace-2x" src="images/icannnew-h.png" width="128" height="128" alt="">
                        </a>
                    </div>
                    <div class="make-wrapper">
                        <a href="https://cpanel.com/" class="make">
                            <img class="replace-2x" src="images/cpanel-h.png" width="128" height="128" alt="">
                        </a>
                    </div>
                    <div class="make-wrapper">
                        <a href="http://www.parallels.com/" class="make">
                            <img class="replace-2x" src="images/parallels-h.png" width="128" height="128" alt="">
                        </a>
                    </div>
                </div>

                @Html.Raw(Model.HomePartnerIntro)
            </div>

            <div class="col-sm-12 col-md-6">
                <div class="title-box">
                    <a href="#" class="btn btn-default">Tin mới <span class="glyphicon glyphicon-arrow-right"></span></a>
                    <h2 class="title">TIN TỨC</h2>
                </div>
                <ul class="latest-posts">
                    @foreach (var news in Model.HomeNewsArticle)
                    {
                        <li>
                            <img class="image img-circle replace-2x" src="@news.FeatureImg" alt="" title="" width="84" height="84" data-appear-animation="rotateIn">
                            <div class="meta">
                                <span>@news.CreatedUser.FullName</span>,
                                <span class="time">@news.CreatedDate.ToString("MM.dd.yyyy")</span>
                            </div>
                            <div class="description">
                                <a href="@Url.Action("Article", "Home", new { id = news.Id})">
                                    @news.Excerpt
                                </a>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</article>