@model AboutViewModel
@{
    ViewData["Title"] = "Giới thiệu";
}

<header class="page-header">
  <div class="container">
    <h1 class="title">TaTa Hosting</h1>
  </div>
</header>
<div class="container">
  <div class="row">
    <article class="content col-sm-12 col-md-12">
      @Html.Raw(Model.AboutExcert)
      <div class="row">
        <div class="clearfix"></div>
        <div class="bottom-padding col-sm-6 col-md-6">
          <div class="title-box">
            <h2 class="title">Giới thiệu dịch vụ</h2>
          </div>
          <div class="panel-group one-open" id="accordion">
            @foreach (var service in Model.AboutServices)
            {
                Html.Raw(service.Value);
            }
          </div>
        </div>
        <div class="bottom-padding col-sm-6 col-md-6">
          <div class="title-box">
            <h2 class="title">Dịch vụ cung cấp</h2>
          </div>
          <div class="progress progress-striped active" data-appear-progress-animation="100%">
            <div class="progress-bar progress-bar-warning">VPS (Virtual Private Server)</div>
          </div>

          <div class="progress progress-striped" data-appear-progress-animation="80%">
            <div class="progress-bar progress-bar-danger">Domain Name Register</div>
          </div>

          <div class="progress progress-striped hover" data-appear-progress-animation="60%">
            <div class="progress-bar progress-bar-success">Cloud Hosting</div>
          </div>
          <div class="progress progress-striped active hover" data-appear-progress-animation="60%">
            <div class="progress-bar progress-bar-info">Cloud Server</div>
          </div>
        </div>
      </div>
      <div class="clearfix"></div>
      <div class="carousel-box load overflow" data-autoplay-disable="true">
        <div class="title-box">
          <a class="next" href="#">
            <svg x="0" y="0" width="9px" height="16px" viewBox="0 0 9 16" enable-background="new 0 0 9 16" xml:space="preserve">
            <polygon fill-rule="evenodd" clip-rule="evenodd" fill="#fcfcfc" points="1,0.001 0,1.001 7,8 0,14.999 1,15.999 9,8 "></polygon>
        </svg>
          </a>
          <a class="prev" href="#">
            <svg x="0" y="0" width="9px" height="16px" viewBox="0 0 9 16" enable-background="new 0 0 9 16" xml:space="preserve">
            <polygon fill-rule="evenodd" clip-rule="evenodd" fill="#fcfcfc" points="8,15.999 9,14.999 2,8 9,1.001 8,0.001 0,8 "></polygon>
        </svg>
          </a>
          <h2 class="title">Đối tác chiến lược</h2>
        </div>

        <div class="clearfix"></div>

        <div class="row">
          <div class="carousel carousel-links">
            @foreach (var partner in Model.AboutPartners)
            {
            <div class="col-sm-3 col-md-2">
              <a href="#">
                @Html.Raw(partner.Value)
              </a>
            </div>
            }
          </div>
        </div>
      </div>
    </article><!-- .content -->
  </div>
</div><!-- .container -->
