@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using TaTa.DataAccess.Entities
@using Microsoft.AspNetCore.Mvc.Localization
@model LoginViewModel
@inject SignInManager<User> SignInManager
@inject IViewLocalizer StringRes

@{
    ViewData["Title"] = StringRes["LoginLabel"].Value;
}

<div class="container page-login-promo">
    <div class="row">
        <div class="col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3 login-register">
            <div data-appear-animation="bounceInDown">
            <div class="rotation">
                <div class="front-end">
                    <div class="form-content">
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { Class = "form-box login-form form-validator" }))
                        {
                            <h3 class="title">@StringRes["LoginLabel"] <small>hoặc @Html.ActionLink(StringRes["RegisterLabel"].Value, "Register", "Account")</small></h3>
                            <p>@StringRes["LoginMessage"]</p>
                            <div class="form-group">
                                <label asp-for="Email">@StringRes["EmailLabel"] <span class="required">*</span></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password">@StringRes["PasswordLabel"] <span class="required">*</span></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="RememberMe" class="checkbox">
                                    <input asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                            <div class="buttons-box clearfix">
                                <button type="submit" class="btn btn-default">@StringRes["LoginLabel"]</button>
                                <a asp-action="ForgotPassword" class="forgot">@StringRes["ForgotPasswordLabel"]</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
